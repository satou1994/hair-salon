        <form id="form" action="thanks">
          <div class="form-group">
            <label for="name">Name</label>
            <span id="blur-message-name" class="error"></span>
            <span id="error-message-name" class="error"></span>
            <input type="text" name="name" id="name" onblur="blurName(this)" placeholder="Sato Taro">
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <span id="blur-message-email" class="error"></span>
            <span id="error-message-email" class="error"></span>
            <input type="text" name="email" id="email" onblur="blurEmail(this)" placeholder="sample1234@example.com">
          </div>
          <div class="form-group">
            <label for="comment">Comment</label>
            <span id="blur-message-comment" class="error"></span>
            <span id="error-message-comment" class="error"></span>
            <textarea name="comment" rows="8" cols="80" id="comment" onblur="blurComment(this)" onKeyUp="countLength(value,'textlength');" placeholder="Thank you for your comment!!"></textarea>
            <p id="textlength">文字数：0</p>
          </div>
          <button type="submit" class="btn">Submit</button>
        </form>
